<div class="special">
	<div class="col-md-8">
		<br>

		<% @posts.each do |post| %>
			    <h2 id="title"><%= post.title %></h2>
			    <p id="category"><%= post.category %></p>
			    <br>
			        <!-- By <h5><%= post.author %></h5> at <h5><%= post.published_at %></h5> -->
			    <div id="paragraph"><%= markdown(post.content) %></div>

			    
		<% end %>
	</div> 

	<div class="col-md-4">


	</div>

</div>

<script>

	$(document).ready(function(){

		$("p").click(function(){
    		alert("The paragraph was clicked.");
			});
	});


</script>