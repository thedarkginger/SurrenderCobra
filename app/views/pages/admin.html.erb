<div class="container">


<% if user_signed_in? %>

<%= content_tag 'h1', current_user.website + ' Admin' %> 

	 <% if user_signed_in? %>

	 	<table class="table table-striped">
  <thead>
    <tr>
      <th>Published at</th>
      <th>Title</th>
      <th>Category</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.published_at %></td>
        <td><%= post.title %></td>
        <td><%= post.category %></td>
        <td><%= post.author %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Story', new_post_path, class: "btn btn-primary btn-lg" %>

      <%= link_to "Log out", destroy_user_session_path, class: "btn btn-default btn-lg", method: :delete %>
     <% else %>
       <p>
         <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
         <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
       </p>
  <% end %>  

</div>


  <% else %>

  <div class="container">
    <div class="jumbotron">
        <h2 style="text-align: center">Welcome to Surrender Cobra Admin</h2>
          <p>This is the portal for approved administrators on the SurrenderCobra project.</p>
          <p>If you are not a whitelisted writer for the team, this is not the spot for you.</p>
           <%= link_to "Log in", new_user_session_path, class: "btn btn-default btn-lg" %>
           <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-lg" %>
     </div>
    </div>

  <% end %> 

